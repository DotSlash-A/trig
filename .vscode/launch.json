{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++ build and run active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false, // Set this to false to use the integrated terminal
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Adjust path if needed
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: g++ build active file"
    }
  ]
}
